{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STM32 Debug (Cortex-Debug / ST-LINK) — PATH",
      "type": "cortex-debug",
      "request": "launch",
      "cwd": "${workspaceFolder}",

      "executable": "${workspaceFolder}/build/Debug/G431CBU6_Wing_Example.elf",
      "device": "STM32G431CB",
      "servertype": "stlink",
      "interface": "swd",
      "runToEntryPoint": "main",

      "svdFile": "${workspaceFolder}/svd/STM32G431.svd",

      // Все через PATH:
      "gdbPath": "arm-none-eabi-gdb.exe",
      "serverpath": "ST-LINK_gdbserver.exe",

      "preLaunchTask": "Build Debug + Generate HEX",
      "serverArgs": [],
      "showDevDebugOutput": "parsed",
      "swoConfig": { "enabled": false },
      "rttConfig": { "enabled": false }
    },

    {
      "name": "STM32 Debug (OpenOCD) — PATH",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build/Debug/G431CBU6_Wing_Example.elf",

      "MIMode": "gdb",
      "miDebuggerPath": "arm-none-eabi-gdb.exe",
      "miDebuggerServerAddress": "localhost:3333",

      "debugServerPath": "openocd.exe",
      "debugServerArgs": "-f interface/stlink.cfg -f target/stm32g4x.cfg",

      "serverLaunchTimeout": 5000,
      "filterStderr": true,
      "filterStdout": false,
      "serverStarted": "Info : Listening on port 3333 for gdb connections",

      "preLaunchTask": "Build Debug + Generate HEX",

      "logging": {
        "moduleLoad": true,
        "trace": false,
        "engineLogging": false,
        "programOutput": true,
        "exceptions": true
      },

      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        { "text": "target extended-remote localhost:3333" },
        { "text": "monitor reset halt" },
        { "text": "load" },
        { "text": "monitor reset halt" }
      ]
    }
  ]
}

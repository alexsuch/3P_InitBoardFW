{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug + Generate HEX",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build/Debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Build Debug configuration and generate HEX/BIN files"
    },
    {
      "label": "Configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "Debug"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Configure CMake Debug preset"
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/Debug",
        "--target",
        "clean"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Clean build artifacts"
    },
    {
      "label": "Flash Debug HEX",
      "type": "shell",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-w",
        "${workspaceFolder}/build/Debug/IB_Wing_STM32G431CBT6.hex",
        "-v",
        "-rst"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Flash existing Debug HEX file to board via ST-LINK"
    },
    {
      "label": "Build and Flash",
      "type": "shell",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-w",
        "${workspaceFolder}/build/Debug/IB_Wing_STM32G431CBT6.hex",
        "-v",
        "-rst"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": ["Build Debug + Generate HEX"],
      "detail": "Build Debug, then flash firmware to board via ST-LINK"
    },
    {
      "label": "Upgrade ST-LINK Firmware",
      "type": "shell",
      "command": "STM32_Programmer_CLI",
      "args": ["-c", "port=SWD", "mode=UR"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Upgrade ST-LINK firmware on the board"
    },
    {
      "label": "Mass Erase (100 kHz)",
      "type": "shell",
      "command": "STM32_Programmer_CLI",
      "args": ["-c", "port=SWD", "mode=UR", "freq=100", "-e", "all"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Mass erase STM32 flash at 100 kHz (stable for custom PCB)"
    },
    {
      "label": "Flash Debug (100 kHz, No Erase)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Start-Sleep -Seconds 2; STM32_Programmer_CLI -c port=SWD mode=HotPlug freq=100 -d ${workspaceFolder}/build/Debug/IB_Wing_STM32G431CBT6.elf --skipErase -rst"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Flash firmware at 100 kHz using HotPlug mode (no reset needed)"
    },
    {
      "label": "Erase and Flash Debug",
      "type": "shell",
      "command": "echo",
      "args": ["Erase and Flash completed"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "Build Debug + Generate HEX",
        "Mass Erase (100 kHz)",
        "Flash Debug (100 kHz, No Erase)"
      ],
      "dependsOrder": "sequence",
      "detail": "Build, mass erase, then flash firmware at 100 kHz"
    },
    {
      "label": "Format All Files",
      "type": "process",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& { $ignoreFile = Join-Path '${workspaceFolder}' '../.clang-format-ignore'; $ignorePatterns = @('build'); if (Test-Path $ignoreFile) { $ignorePatterns += Get-Content $ignoreFile | Where-Object { $_ -match '\\S' } | ForEach-Object { $_.Trim().TrimEnd('/') -replace '\\.', '\\.' -replace '\\*', '.*' } }; $pattern = '(' + ($ignorePatterns -join '|') + ')'; Get-ChildItem -Path '${workspaceFolder}', '${workspaceFolder}/../shared' -Recurse -Include *.c,*.h,*.cpp,*.hpp | Where-Object { $_.FullName -notmatch $pattern } | ForEach-Object { Write-Host \"Formatting $($_.FullName)\"; clang-format -i $_.FullName } }"
      ],
      "problemMatcher": [],
      "detail": "Format all C/C++ files in the workspace and shared directory, respecting .clang-format-ignore"
    }
  ]
}

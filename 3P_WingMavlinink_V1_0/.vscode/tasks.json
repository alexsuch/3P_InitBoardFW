{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "CubeProg: Flash project (SWD)",
            "command": "STM32_Programmer_CLI",
            "args": [
                "--connect",
                "port=swd",
                "--download",
                "${command:cmake.launchTargetPath}",
                // Let CMake extension decide executable: "${command:cmake.launchTargetPath}",
                "-hardRst", // Hardware reset - if rst pin is connected
                "-rst", // Software reset (backup)
                "--start" // Start execution
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build + Flash",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "CubeProg: Flash project (SWD)",
            ]
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [
                "all"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template clean rebuild task"
        },
        {
            "type": "shell",
            "label": "CubeProg: List all available communication interfaces",
            "command": "STM32_Programmer_CLI",
            "args": ["--list"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Debug + Generate HEX",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S . -B build/Debug && cmake --build build/Debug && C:/ST/STM32CubeCLT_1.18.0/GNU-tools-for-STM32/bin/arm-none-eabi-objcopy -O ihex build/Debug/3P_WingMavlinink_V1_0.elf build/Debug/3P_WingMavlinink_V1_0.hex",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Debug (Ninja)",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S . -B build/Debug && cmake --build build/Debug",
            "group": "build"
        },
        {
            "label": "Build Release (Ninja)",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S . -B build/Release && cmake --build build/Release",
            "group": "build"
        },
        {
            "label": "Build Release + Generate HEX",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S . -B build/Release && cmake --build build/Release && C:/ST/STM32CubeCLT_1.18.0/GNU-tools-for-STM32/bin/arm-none-eabi-objcopy -O ihex build/Release/3P_WingMavlinink_V1_0.elf build/Release/3P_WingMavlinink_V1_0.hex",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean (Ninja)",
            "type": "shell",
            "command": "cmake --build build/Debug --target clean && cmake --build build/Release --target clean",
            "group": "build"
        },
        {
            "label": "Build + Flash Debug",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -S . -B build/Debug && cmake --build build/Debug && STM32_Programmer_CLI --connect port=swd --download build/Debug/3P_WingMavlinink_V1_0.elf -hardRst -rst --start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build + Flash Release",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -S . -B build/Release && cmake --build build/Release && STM32_Programmer_CLI --connect port=swd --download build/Release/3P_WingMavlinink_V1_0.elf -hardRst -rst --start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
